{
  "name": "react-bacon-todomvc",
  "version": "0.0.1",
  "author": "Matti Lankinen <m.lankinen@iki.fi>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "node app.js",
    "bundle": "npm run bundle:js && npm run bundle:css",
    "bundle:js": "browserify app/site/site.jsx --extension .jsx -t babelify -g uglifyify > public/bundle.js",
    "bundle:css": "lessc -x app/site/site.less > public/bundle.css",
    "watch": "npm run watch:server & npm run watch:js & npm run watch:css & npm run monitor:css & npm run monitor:js & wait",
    "watch:server": "nodemon -e js --watch app --ignore app/site app.js",
    "watch:js": "watchify app/site/site.jsx -v --extension .jsx -t babelify -g livereactload -o public/bundle.js",
    "watch:css": "npm run bundle:css && watch-run -p 'app/site/**/*.less' 'npm run bundle:css'",
    "monitor:js": "livereactload monitor --show-notification public/bundle.js",
    "monitor:css": "node --eval \"require('livereload').createServer({exclusions: ['.js']}).watch('public')\""
  },
  "dependencies": {
    "babel": "5.2.15",
    "baconjs": "0.7.53",
    "body-parser": "1.12.3",
    "express": "4.12.3",
    "livereactload-api": "0.5.1",
    "react": "0.13.2",
    "serve-static": "1.9.2"
  },
  "engines": {
    "node": "0.12.x"
  },
  "devDependencies": {
    "babelify": "6.0.2",
    "browserify": "10.1.0",
    "less": "2.5.0",
    "livereactload": "0.5.1",
    "livereload": "0.3.7",
    "nodemon": "1.3.7",
    "uglifyify": "3.0.1",
    "watch-run": "1.2.2",
    "watchify": "3.2.1"
  }
}
